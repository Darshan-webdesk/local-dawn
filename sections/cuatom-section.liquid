<h2>
    {{ section.settings.heading }}
</h2>

<p>
    {{ section.settings.content }}
</p>

<img src="{{ section.settings.img | img_url: 'master' }}" alt="">
{% schema %}
{
  "name": "custom section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label":"Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label":"Content"
    },
    {
        "type": "image_picker",
        "id": "img",
        "label":"Image"
      }
  ],
  "presets": [
  {
    "name": "Custom section"
  }
] 
}
{% endschema %}